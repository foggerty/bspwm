[colors]
back = #bb000000

[layout]
gap = 18


[bar/bar]
modules-left = mpd
modules-center = date
modules-right = memory cpu

wm-restack = bspwm

background = ${colors.back}
border-size = 1
border-color = #aaaaaa
width = 2524
height = 2.8%
offset-x = ${layout.gap}
offset-y = ${layout.gap}
padding = 2
module-margin = 2
locale = en_NZ.UTF-8
tray-position = right
tray-maxize= = 32

; note: the ';2' at the end is vertical offset
font-0 = "Source Code Pro:size=12;2"


[module/date]
type = internal/date
date = %a %d %b
time = %H:%M
label = %date%  -  %time%
format = <label>


[module/cpu]
type = internal/cpu
interval = .5
format = <label>
label = cpu: %percentage%%


[module/memory]
type = internal/memory
interval = .5
format = <label>
label = ram: %percentage_used%%


[module/iwd]
type = custom/script
exec = iwctl station wlan0 show | head -n 6 | tail -n 1 | awk '{print $2}'
click-left = pkill iwgtk || iwgtk &


[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

format-online = <icon-prev> <icon-stop> <icon-play> <icon-pause> <icon-next> <bar-progress> <label-song>

label-song = %artist% - %title%
label-offline = mpd is offline

icon-play = ►
icon-pause = ..
icon-stop = ■
icon-prev = <
icon-next = >

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
