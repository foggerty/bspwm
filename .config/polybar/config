[colors]
back = #44000000
border = #aaaaaa
gray = #888888
white = #ffffff

[bar/bar]
modules-left = memory cpu
modules-center = date
modules-right = bspwm
background = ${colors.back}
border-size = 1
border-color = ${colors.border}
width = 1896
height = 3.2%
offset-x = 12
offset-y = 12
padding = 2
module-margin = 2
locale = en_NZ.UTF-8
tray-position = right
tray-maxize= = 32
; note: the ';2' at the end is vertical offset
font-0 = "Cantarell:size=11;2"
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm
label-empty-foreground = ${colors.gray}
label-occupied-foreground = ${colors.gray}
label-focused-foreground = ${colors.white}
label-separator = "   "

[module/date]
type = internal/date
date = %a %d %b
time = %H:%M
label = %date%  -  %time%
format = <label>

[module/cpu]
type = internal/cpu
interval = .5
format = <label>
label = cpu: %percentage%%

[module/memory]
type = internal/memory
interval = .5
format = <label>
label = ram: %percentage_used%%

[module/iwd]
type = custom/script
exec = iwctl station wlan0 show | head -n 6 | tail -n 1 | awk '{print $2}'
click-left = pkill iwgtk || iwgtk &
