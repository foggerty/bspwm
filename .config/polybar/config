[colors]
back = #991a2b3c

[bar/bar]
modules-left = memory cpu
modules-center = date
modules-right = net
background = ${colors.back}
border-size = 1
border-color = #aaaaaa
width = 98.8%
height = 3%
offset-x = .5%
offset-y = .5%
padding = 2
module-margin = 2
locale = en_NZ.UTF-8
tray-position = right
tray-maxize= = 32
tray-background =
; note: the ';2' at the end is vertical offset
font-0 = "Cantarell:size=12;2"
wm-restack = bspwm

[module/date]
type = internal/date
date = %a %d %b
time = %H:%M
label = %date%  -  %time%
format = <label>

[module/cpu]
type = internal/cpu
interval = .5
format = <label>
label = cpu: %percentage%%

[module/memory]
type = internal/memory
interval = .5
format = <label>
label = ram: %percentage_used%%

[module/net]
type = custom/script
exec = iwctl station wlan0 show | head -n 6 | tail -n 1 | awk '{print $2}'
click-left = pkill iwgtk || iwgtk &